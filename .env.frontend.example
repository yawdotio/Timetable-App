# Frontend Environment Configuration
# Copy this to .env.frontend or set these as environment variables

# Backend API URL - change this to point to your backend deployment
API_BASE_URL=http://localhost:8000/api/v1

# Default Calendar Name - displayed as the default value in the calendar settings form
CALENDAR_NAME=My Timetable

# Default Timezone - used when generating calendar events
TIMEZONE=UTC

# Example configurations for different deployment scenarios:
# 
# Local Development:
# API_BASE_URL=http://localhost:8000/api/v1
#
# Docker Compose:
# API_BASE_URL=http://backend:8000/api/v1
#
# Production:
# API_BASE_URL=https://api.example.com/api/v1
# CALENDAR_NAME=University Calendar
# TIMEZONE=America/New_York
