# Backend Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///./timetable_generator.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/dbname

# ============================================
# API Configuration
# ============================================
API_BASE_URL=http://localhost:8000/api/v1
PROJECT_NAME=Timetable Generator API
API_V1_STR=/api/v1

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# CORS Origins (comma-separated)
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================
# File Upload Settings
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads
# ALLOWED_EXTENSIONS is set in code: .pdf,.xlsx,.xls,.csv

# ============================================
# Google Cloud Storage Configuration
# ============================================
# Set USE_GCS=false for local development without GCS
USE_GCS=true

# Your GCP project ID
GCP_PROJECT_ID=timetable-calendar-app

# GCS bucket name (will be auto-created if it doesn't exist)
GCS_BUCKET_NAME=timetable-calendar-app-uploads

# GCS bucket location/region
GCS_LOCATION=us-central1

# Signed URL expiration in seconds (default: 1 hour)
GCS_SIGNED_URL_EXPIRATION=3600

# Path to service account key JSON file (for local development)
# On Windows: C:\Users\YourUser\.gcp\timetable-gcs-key.json
# On Linux/Mac: /home/youruser/.gcp/timetable-gcs-key.json
# Leave empty when using Workload Identity (Cloud Run, GCE, GKE)
GOOGLE_APPLICATION_CREDENTIALS=

# ============================================
# Calendar Settings
# ============================================
CALENDAR_NAME=My Timetable
TIMEZONE=UTC

# ============================================
# Admin Authentication
# ============================================
# Set admin username and password for the /admin endpoint
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=changeme
